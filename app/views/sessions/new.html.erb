<h2 class="heading heading--2 heading--text-center">Sign in</h2>

<%= form_for :session, url: session_path, class: 'form' do |f| %>
  <div class="form__group">
    <%= f.label :name, class: 'form__group__label' %>
    <%= f.text_field :username, class: 'form__group__input' %>
  </div>

  <div class="form__group">
    <%= f.label :password, class: 'form__group__label' %>
    <%= f.password_field :password, class: 'form__group__input' %>
  </div>

  <div class="form__group">
    <%= f.submit 'Sign in', class: 'form__group__input form__group__input--button' %>
  </div>
<% end %>
